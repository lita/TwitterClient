<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:dialogTheme">@style/Theme.Compose</item>


    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Compose" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="TwitterTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primary_twitter_bar</item>
        <item name="tabSelectedTextColor">@color/primary_twitter_dark</item>
        <item name="tabTextAppearance">@style/TwitterTabTextAppearance</item>
        <item name="tabBackground">@color/white</item>
    </style>

    <style name="TwitterTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_twitter_bar</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
